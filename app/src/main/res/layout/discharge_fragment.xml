                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.228"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/remain_service" />

            <TextView
                android:id="@+id/promotion_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="4x일"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.565"
                app:layout_constraintStart_toEndOf="@+id/promotion"
                app:layout_constraintTop_toBottomOf="@+id/remain_service_text" />

            <View
                android:id="@+id/specialist"
                android:layout_width="1dp"
                android:layout_height="58dp"
